<% include _layouts/header %>

<h1 class='page-header'><%= product.title %> </h1>
 <div class='row'>  
    <div class='col-xs-12 col-md-7'>
        <img class='sp1' src='/products/product_files/images/<%= product._id %>'>
    </div>
    <div class='col-xs-12 col-md-5'>
        <p class='text-capitalize font-weight-bold'><%= product.desc %></p>
        <p>$<%= parseFloat(product.price).toFixed(2) %></p>
        <p><a href='/cart/add/<%= product.slug %>'>Add to cart</a></p>
    </div>
 </div>
 <div class='row'>
     <div class='col-xs-12'>
         <ul class='gallery'>
        <% gallery.forEach((image) => { %>  
            <li>
                <a data-fancybox="gallery" href='data:<%=image.contentType%>;base64,<%= image.data.toString('base64') %>'> 
                    <img src="data:<%=image.contentType%>;base64,<%= image.data.toString('base64') %>"/> 
                </a>
            </li>
        <% }) %>
        </ul>
     </div>
 </div>

<% include _layouts/footer %>