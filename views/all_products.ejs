<% include _layouts/header %>

<div class='row products'> 
    <% products.forEach((prod) => { %>  
        <div class='col-xs-12 col-md-4 p'>
            <a class='pa' href='/products/<%= prod.category %>/<%= prod.slug %>'>
            <img  class='pimage' src='/products/image/<%= prod._id %>'>
            </a>  
            <h5 class='text-capitalize'><%= prod.title %></h5>  
            <h6>$<%= parseFloat(prod.price).toFixed(2) %></h6> 
            <a class='vd' href='/products/<%= prod.category %>/<%= prod.slug %>'>View Details</a> 
        </div>
    <% })%>

</div>

<% include _layouts/footer %>